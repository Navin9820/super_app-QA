# Rider App Environment Configuration
# ======================================
# Copy this file to .env and update the values as needed

# App Configuration
REACT_APP_NAME="Rider App"
REACT_APP_VERSION="1.0.0"
REACT_APP_ENV="development"

# Super App Backend API Configuration
REACT_APP_SUPER_APP_API_URL="http://localhost:5000/api"
REACT_APP_BACKEND_URL="http://localhost:5000"

# Rider App Frontend Configuration
PORT=3002
REACT_APP_FRONTEND_URL="http://localhost:3002"

# Authentication & Security
REACT_APP_JWT_SECRET="your-jwt-secret-key-here"
REACT_APP_TOKEN_EXPIRY="7d"

# LocationIQ API Configuration (for mapping and routing)
REACT_APP_LOCATIONIQ_API_KEY="pk.e62ffd62f56c72b6eb9c10981bb3ba3d"
REACT_APP_LOCATIONIQ_BASE_URL="https://us1.locationiq.com/v1"

# Google Maps API Configuration (alternative mapping)
REACT_APP_GOOGLE_MAPS_API_KEY="YOUR_NEW_UNRESTRICTED_API_KEY_HERE"
REACT_APP_GOOGLE_MAPS_TILE_LAYER="https://mt1.google.com/vt/lyrs=r&x={x}&y={y}&z={z}&key=YOUR_NEW_UNRESTRICTED_API_KEY_HERE"

# Map Configuration
REACT_APP_MAP_DEFAULT_CENTER_LAT="13.0827"
REACT_APP_MAP_DEFAULT_CENTER_LNG="80.2707"
REACT_APP_MAP_DEFAULT_ZOOM="12"
REACT_APP_MAP_TILE_LAYER="https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png"

# Payment Configuration (Razorpay)
REACT_APP_RAZORPAY_KEY_ID="rzp_test_51O8X8X8X8X8X8"
REACT_APP_RAZORPAY_KEY_SECRET="your-razorpay-secret-key"

# Notification Configuration
REACT_APP_ENABLE_PUSH_NOTIFICATIONS="true"
REACT_APP_VAPID_PUBLIC_KEY="your-vapid-public-key"

# Geolocation Configuration
REACT_APP_ENABLE_GEOLOCATION="true"
REACT_APP_LOCATION_UPDATE_INTERVAL="30000" # 30 seconds
REACT_APP_LOCATION_ACCURACY="high"

# Order Management Configuration
REACT_APP_MAX_ACTIVE_ORDERS="3"
REACT_APP_ORDER_AUTO_ACCEPT_TIMEOUT="30000" # 30 seconds
REACT_APP_ORDER_STATUS_UPDATE_INTERVAL="10000" # 10 seconds

# Earnings Configuration
REACT_APP_MIN_WITHDRAWAL_AMOUNT="100"
REACT_APP_EARNINGS_UPDATE_INTERVAL="60000" # 1 minute

# Debug & Development
REACT_APP_DEBUG_MODE="true"
REACT_APP_ENABLE_LOGGING="true"
REACT_APP_LOG_LEVEL="info"

# Feature Flags
REACT_APP_ENABLE_LIVE_TRACKING="true"
REACT_APP_ENABLE_OFFLINE_MODE="false"
REACT_APP_ENABLE_AUTO_ACCEPT="false"
REACT_APP_ENABLE_SOUND_NOTIFICATIONS="true"

# Performance Configuration
REACT_APP_API_TIMEOUT="10000"
REACT_APP_ROUTE_REQUEST_TIMEOUT="10000"
REACT_APP_GEOCODING_REQUEST_TIMEOUT="5000"

# Default Values
REACT_APP_DEFAULT_CURRENCY="INR"
REACT_APP_DEFAULT_LANGUAGE="en"
REACT_APP_DEFAULT_TIMEZONE="Asia/Kolkata"

# Support & Contact
REACT_APP_SUPPORT_EMAIL="support@riderapp.com"
REACT_APP_SUPPORT_PHONE="+91-9876543210"
REACT_APP_HELP_URL="https://help.riderapp.com"

# Analytics (if needed)
REACT_APP_GOOGLE_ANALYTICS_ID=""
REACT_APP_MIXPANEL_TOKEN=""

# Error Reporting
REACT_APP_SENTRY_DSN=""
REACT_APP_ERROR_REPORTING_ENABLED="false"
